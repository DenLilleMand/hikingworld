<!DOCTYPE html>
<html lang="en">
<head>
    <% include ./partials/head %>       
</head>
<body class="bodyrecovery">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <div class="panel panel-login">
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-12">
                                <form id="recovery-form" action="/passwordreset" method="post" role="form" style="display: block;">
                                    <input type="hidden" name="csrf" value=<%- JSON.stringify(csrfToken) %>>
                                    <div class="form-group">
                                        <input type="email" name="email" id="email" tabindex="2" class="form-control" placeholder="E-mail">
                                    </div>
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-sm-6 col-sm-offset-3">
                                                <input type="submit" name="recovery-submit" id="recovery-submit" tabindex="4" class="form-control btn btn-login" value="Reset password">
                                            </div>
                                        </div>
                                    </div>                                      
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-lg-12">
                                                <div class="text-center">
                                                    <a href="/" tabindex="5" class="forgot-password">Back to log in</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>                                  
                                </form>                                
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>