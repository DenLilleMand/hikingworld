<!DOCTYPE html>
<html lang="en">
<head>
    <% include ./partials/head %> 
    <script src="registration.bundle.js"></script>    
</head>
<body class="bodyupdate">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <div class="panel panel-login">
                    <div class="panel-body">
                        <div class="row">
                            <form id="recovery-form" action="/update" method="post" role="form" style="display: block;" encType="multipart/form-data">
                            <div class="col-lg-4">
                                <div clasl="col-lg-12" style="margin-bottom: 15px;">
                                    <img id="profilepicture" src=<%- JSON.stringify(profilePicture) %>>
                                </div>                                
                                <label class="btn btn-default btn-file">
                                    Browse <input type="file" name="image" style="display: none;">
                                </label>
                            </div>
                            <div class="col-lg-8">                                
                                    <input type="hidden" name="csrf" value=<%- JSON.stringify(csrfToken) %>>
                                    <div class="form-group">
                                        <input type="text" name="firstname" id="firstname" tabindex="2" class="form-control" placeholder="First Name" value=<%- JSON.stringify(firstName) %>>
                                    </div>
                                    <div class="form-group">
                                        <input type="text" name="lastname" id="lastname" tabindex="2" class="form-control" placeholder="Last Name" value=<%- JSON.stringify(lastName) %>>
                                    </div>
                                    <div class="form-group">
                                        <input type="email" name="email" id="email" tabindex="2" class="form-control" placeholder="E-mail" value=<%- JSON.stringify(email) %>>
                                    </div>
                                    <div class="form-group">
                                        <input type="password" name="password" id="password" tabindex="2" class="form-control" placeholder="Old password">
                                    </div>
                                    <div class="form-group">
                                        <input type="password" name="password_new" id="password_new" tabindex="2" class="form-control" placeholder="New password">
                                    </div>
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-sm-12">
                                                <input type="submit" name="update-submit" id="update-submit" tabindex="4" class="form-control btn btn-login" value="Update profile">
                                            </div>
                                        </div>
                                    </div>                                      
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-lg-12">
                                                <div class="text-center">                                              	
                                                  <a href="/home" tabindex="5" class="user-area">Back to user area</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>                                  
                                </form>                                
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>     
</body>
</html>